.panel.panel-default
  .panel-heading
    %h3.panel-title
      %strong= t ".title"
  .panel-body
    %p= t ".description"
    = minimal_form_for resource, as: resource_name, url: password_path(resource_name) do |f|
      = f.input :email
      = f.button :button, t(".submit"), class: "btn btn-primary btn-block"

