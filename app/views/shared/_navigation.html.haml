%header
  %ul.nav.nav-pills
    = render "shared/navigation_links"
    %li.dropdown.pull-right{class: active_page_class("sign_in")}
      - if user_signed_in?
        = link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown" do
          = current_user.name
          %span.caret
        %ul.dropdown-menu
          = render "shared/navigation_menu_links"
      - else
        = link_to "Sign in", new_user_session_path
